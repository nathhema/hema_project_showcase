# Backend environment variables for KrishiSafar
# Copy this file to `.env` in the same folder and fill real values

# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/krishisafar

# Auth
# Use a long random string
JWT_SECRET=your_jwt_secret_here

# Payments (future use)
STRIPE_SECRET_KEY=

# Email (future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="KrishiSafar <no-reply@krishisafar.local>"